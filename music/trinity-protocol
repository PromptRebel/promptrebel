  <script>
    // Scroll-Progress
    const scrollBar = document.getElementById("scrollProgress");
    window.addEventListener("scroll", () => {
      const doc = document.documentElement;
      const scrollable = doc.scrollHeight - window.innerHeight;
      const ratio = scrollable > 0 ? window.scrollY / scrollable : 0;
      scrollBar.style.transform = `scaleX(${ratio})`;
    });

    // Brand Glitch on Load
    const brandEl = document.getElementById("brand");
    window.addEventListener("load", () => {
      brandEl.classList.add("glitch");
      setTimeout(() => brandEl.classList.remove("glitch"), 800);
    });

    // Footer-Version-Easter-Egg
    const buildVersionEl = document.getElementById("buildVersion");
    buildVersionEl.addEventListener("click", () => {
      const versions = ["v0.1.trinity", "v0.2.trinity", "v0.6.9.trinity", "v1.0.trinity", "v∞.trinity"];
      let i = 0;
      const int = setInterval(() => {
        buildVersionEl.textContent = versions[i++ % versions.length];
        if (i > 10) clearInterval(int);
      }, 120);
    });
  </script>
